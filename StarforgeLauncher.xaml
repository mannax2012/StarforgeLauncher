<Window x:Class="StarforgeLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarforgeLauncher"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="250" 
        Width="400"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="DarkGray">
    <Border x:Name="MainBorder" CornerRadius="10" Padding="0">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/data/img/launcher-background.jpg"
                    Stretch="Fill"
                    AlignmentX="Center"
                    AlignmentY="Center"/>
        </Border.Background>
        <Grid>
            <Viewbox Stretch="Fill">
                <Grid Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/data/img/starforge-logo.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                </Grid>
            </Viewbox>
            <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Center" Margin="0,215,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="366" TextAlignment="Center" Height="26" FontSize="18" Foreground="White"/>
        </Grid>
    </Border>
</Window>
