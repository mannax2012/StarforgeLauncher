<Window x:Class="StarforgeLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarforgeLauncher"
        mc:Ignorable="d"
        Title="Starforge Launcher" 
        Height="250" 
        Width="400"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Icon="data/img/sf_icon.ico"
        Background="Transparent">
    <Border x:Name="MainBorder" CornerRadius="10" Padding="0">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/data/img/launcherBackground.png"
                    Stretch="Fill"
                    AlignmentX="Center"
                    AlignmentY="Center"/>
        </Border.Background>
        <Grid>
            <TextBlock x:Name="StatusTextBlock"  HorizontalAlignment="Center" Margin="0,185,0,0" TextWrapping="Wrap" Text="Welcome to Starforge" VerticalAlignment="Top" Width="366" TextAlignment="Center" Height="26" FontSize="18" Foreground="White"/>
        </Grid>
    </Border>
</Window>
